    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-istanbul": "^4.0.15",
    "eslint": "^9.39.1",
    "knip": "^5.71.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "license": "MIT",
  "files": [
    "build",
    "src",
    "README.md",
    "LICENSE"
  ],
