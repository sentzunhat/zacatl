    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "tsyringe": "^4.10.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
