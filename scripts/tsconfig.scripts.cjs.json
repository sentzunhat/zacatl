{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "../build-scripts-cjs",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": false,
    "resolveJsonModule": true,
    "allowJs": false,
    "lib": ["ES2020"]
  },
  "include": ["**/*.ts", "**/*.js"]
}
