{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",

    "types": ["vitest/globals", "node", "bun"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "moduleDetection": "force",

    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./src",
    "outDir": "./build",
    "removeComments": true,
    "noEmit": false,
    "noEmitOnError": true,

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    "skipLibCheck": true,

    "paths": {
      "@zacatl/configuration": ["./src/configuration/index.ts"],
      "@zacatl/dependency-injection": ["./src/dependency-injection/index.ts"],
      "@zacatl/error": ["./src/error/index.ts"],
      "@zacatl/localization": ["./src/localization/index.ts"],
      "@zacatl/logs": ["./src/logs/index.ts"],
      "@zacatl/runtime": ["./src/runtime/index.ts"],
      "@zacatl/service": ["./src/service/index.ts"],
      "@zacatl/utils": ["./src/utils/index.ts"],
      "@zacatl/third-party": ["./src/third-party/index.ts"],
      "@zacatl/third-party/uuid": ["./src/third-party/uuid.ts"],
      "@zacatl/third-party/i18n": ["./src/third-party/i18n.ts"],
      "@zacatl/third-party/i18next": ["./src/third-party/i18next.ts"],
      "@zacatl/third-party/js-yaml": ["./src/third-party/js-yaml.ts"],
      "@zacatl/optionals": ["./src/optionals.ts"],
      "@zacatl/infrastructure": [
        "./src/service/layers/infrastructure/index.ts"
      ],
      "@zacatl/domain": ["./src/service/layers/domain/index.ts"],
      "@zacatl/application": ["./src/service/layers/application/index.ts"],
      "@zacatl/platform": ["./src/service/platforms/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "build", "coverage", "test"]
}
